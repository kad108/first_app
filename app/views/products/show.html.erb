<p id="notice"><%= alert %></p>

<div class="container">
  <div class="row">
    <div class="page-title">
    Product Details
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12  col-md-4 col-md-offset-4">
    <p>
      <strong>Name:</strong>
      <%= @product.name %>
    </p>
    <p>
      <strong>Description:</strong>
      <%= @product.description %>
    </p>
    <p>
      <strong>Image:</strong><br>
      <%= image_tag(@product.image_url, class:"img-responsive img-carousel-center img-thumbnail") %>
    </p>
    <p>
      <strong>Image url:</strong>
      <%= @product.image_url %>
    </p>
    <p>
      <strong>Color:</strong>
      <%= @product.colour %>
    </p>
    <p>
      <strong>Price:</strong>
      <%= @product.price %>
    </p>
    <p>
      <strong>Average Rating:</strong> <div class="rated col-xs-12  col-md-12 col-md-offset-1" data-score="<%= @product.average_rating %>"></div>
    </p>
  </div>
    <div class="row">
      <div class="col-xs-12  col-md-4 col-md-offset-4">
        <%= render "new_comment" %>
        <%= render "comments" %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-8 col-xs-offset-2 col-md-4 col-md-offset-5">
        <div class="pagination">
          <%= will_paginate @comments %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2 col-md-2 col-md-offset-5 sed">
      <%= link_to 'Edit', edit_product_path(@product) %> |
      <%= link_to 'Back', :back %>
    </div>
  </div>
  <div class="main"></div>
</div>