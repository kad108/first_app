<p id="notice"><%= notice %></p>
<p id="notice"><%= alert %></p>

<div class="container">
  <div class="row">
    <div class="page-title">
    <%= @product.name %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-3 col-md-offset-3">
      <p>
        <%= image_tag(@product.image_url, class:"img-zoom img-responsive img-thumbnail", data_zoom_image: "@product.image_url") %>
      </p>
    </div>
    <div class="col-xs-12 col-md-3 ">
      <p class="product_description">
        <strong>Color:</strong>
        <%= @product.colour %>
      </p>
      <p class="product_description">
      <strong>Price:</strong>
      <%= @product.price %>
      </p>
      <p class="product_description">
        <strong>Average Rating:</strong><br><span class="rated" data-score="<%= @product.average_rating %>"></span>
      </p>

      <%= form_tag "/payments/create" do %>
        <%= render partial: "shared/stripe_checkout_button" %>
      <% end %>

    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <p class="product_description">
        <strong>Description:</strong>
        <%= @product.description %>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="comments">
        <%= render "new_comment" %>
        <%= render "comments" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2 col-md-4 col-md-offset-5">
      <div class="digg_pagination ">
        <%= will_paginate @comments %>
      </div>
    </div>
  </div>
  </div>
  <div class="row">
    <div class="main"></div>
    <div class="col-xs-8 col-xs-offset-2 col-md-2 col-md-offset-5 sed">
      <% if signed_in? && current_user.admin? %>
        <%= link_to 'Edit', edit_product_path(@product) %> |

      <% end %>
      <%= link_to 'Back', :back %>
    </div>
  </div>
  <div class="main"></div>
</div>