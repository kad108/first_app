<div class="container">
  <div class="row">
    <div class="page-title">
    <%= @product.name %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-3 col-md-offset-3">
      <p>
        <%= image_tag(@product.image_url, class:"img-zoom img-responsive img-thumbnail", data_zoom_image: "@product.image_url") %>
      </p>
    </div>
    <div class="col-xs-12 col-md-3 ">
      <p class="product_description">
        <strong>Color:</strong>
        <%= @product.colour %>
      </p>
      <p class="product_description">
        <strong>Price:</strong>
        <%= @product.price %>
      </p>
      <p class="product_description">
        <strong>Average Rating:</strong><br><span class="rated" id="average-rating" data-score="<%= @product.average_rating %>"></span>
      </p>

      <%= form_tag "/payments/create" do %>
        <%= hidden_field_tag(:product_id, @product.id) %>
        <%= render partial: "shared/stripe_checkout_button" %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <p class="product_description">
        <strong>Description:</strong>
        <%= @product.description %>
      </p>
      <p>
        Views: <%= @product.views %>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="comments">
        <div class="alert alert-info" style="display:none" role="alert">A new comment was posted!</div>
        <%= render "new_comment" %>
        <%= render "comments" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2 col-md-4 col-md-offset-4 text-center">
      <div class="digg_pagination ">
        <%= will_paginate @comments %>
      </div>
      <div class="main"></div>
      <div class="sed">
        <% if signed_in? && current_user.admin? %>
          <%= link_to 'Edit', edit_product_path(@product) %> |
        <% end %>
        <%= link_to 'Back', :back %>
      </div>
    </div>
  </div>
  <div class="main"></div>
</div>