<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td width=10%><%= product.name %></td>
        <td width=33%><%= product.description %></td>
        <td><%= image_tag(product.image_url, class: "img-responsive") %></td>

        
      </tr>
      <tr>
        <td><%= link_to 'Show', product %>&nbsp;&#124;&nbsp;<%= link_to 'Edit', edit_product_path(product) %>&nbsp;&#124;&nbsp;<%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>

<div class="main"></div>