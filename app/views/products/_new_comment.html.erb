<% if signed_in? %>
<div class="col-xs-12 col-md-8 col-md-offset-1">
    <h4>Add a review:</h4>
    <%= form_for([@product, @product.comments.build]) do |f| %>
  <p>
   	<%= f.label :body, "Comments" %><br>
   	<%= f.text_area :body %>
  </p>
  <p>
  Rating:
    <div class="rating"></div>
  </p>
  <p>
  	<%= f.submit "Submit" %>
  </p>
    <% end %>
</div>
<% end %>